          { "maxFactor": 1.0, "count": 1 },
          { "maxFactor": 2.0, "count": 2 },
          { "maxFactor": 4.0, "count": 3 }
        ]
      }
    },
    {
      "id": "skillet_small",
      "name": "8-inch skillet",
      "upgrades": [
        { "minFactor": 2.0, "use": "skillet_large" }
      ]
    },
    {
      "id": "skillet_large",
      "name": "12-inch skillet"
    }
  ],
  "ingredients": [
    {
      "id": "flour",
      "name": "Flour"
    }
  ],
  "instructions": [
    "Mix ingredients",
    "Bake"
  ]
