{
  "$schema": "https://soustack.spec/soustack.schema.json",
  "level": "base",
  "stacks": ["timed@1"],
  "name": "Rested dough",
  "yield": { "amount": 2, "unit": "loaves" },
  "time": { "total": { "minutes": 180 } },
  "ingredients": [
    { "id": "f", "name": "flour" },
    { "id": "w", "name": "water" }
  ],
  "instructions": [
    {
      "id": "mix",
