{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://soustack.spec/stacks/referenced.schema.json",
  "title": "Referenced Stack",
  "type": "object",
  "allOf": [
    { "$ref": "./structured.schema.json" },
    {
      "properties": {
        "ingredients": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/$defs/ingredient" },
              { "$ref": "#/$defs/ingredientSection" }
            ]
          }
        },
        "instructions": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/$defs/referencedStep" },
              { "$ref": "#/$defs/referencedSection" }
            ]
          }
        }
      }
    }
  ],
  "$defs": {
    "ingredient": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "quantity": { "$ref": "../defs/quantity.schema.json" }
      },
      "required": ["id", "name"],
      "additionalProperties": false
    },
    "ingredientSection": {
      "type": "object",
      "properties": {
        "section": { "type": "string" },
        "ingredients": {
          "type": "array",
          "items": { "$ref": "#/$defs/ingredient" }
        }
      },
      "required": ["section", "ingredients"],
      "additionalProperties": false
    },
    "referencedStep": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "text": { "type": "string" },
        "inputs": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "uniqueItems": true
        },
        "dependsOn": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "techniqueIds": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "images": { "type": "array", "items": { "$ref": "../defs/common.schema.json#/properties/uri" } },
        "videos": { "type": "array", "items": { "$ref": "../defs/common.schema.json#/properties/uri" } }
      },
      "required": ["id", "text", "inputs"],
      "additionalProperties": false
    },
    "referencedSection": {
      "type": "object",
      "properties": {
        "section": { "type": "string" },
        "steps": {
          "type": "array",
          "items": { "$ref": "#/$defs/referencedStep" }
        }
      },
      "required": ["section", "steps"],
      "additionalProperties": false
    }
  }
}
