{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://soustack.spec/stacks/referenced.schema.json",
  "title": "Referenced Stack",
  "type": "object",
  "allOf": [
    { "$ref": "./structured.schema.json" },
    {
      "properties": {
        "ingredients": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/$defs/ingredient" },
              { "$ref": "#/$defs/ingredientSection" }
            ]
          }
        },
        "instructions": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/$defs/referencedStep" },
              { "$ref": "#/$defs/referencedSection" }
            ]
          }
        }
      }
    }
  ],
  "$defs": {
    "ingredient": {
      "allOf": [
        { "$ref": "../defs/entities.schema.json#/$defs/IngredientBase" },
        { "required": ["id"] }
      ]
    },
    "ingredientSection": {
      "type": "object",
      "properties": {
        "section": { "type": "string" },
        "ingredients": {
          "type": "array",
          "items": { "$ref": "#/$defs/ingredient" }
        },
        "metadata": { "type": "object", "additionalProperties": true }
      },
      "required": ["section", "ingredients"],
      "additionalProperties": false,
      "patternProperties": {
        "^x-": { "$ref": "../defs/common.schema.json#/properties/extensionLaneValue" }
      }
    },
    "referencedStep": {
      "allOf": [
        { "$ref": "../defs/entities.schema.json#/$defs/StepBase" },
        {
          "properties": {
            "inputs": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1,
              "uniqueItems": true
            }
          },
          "required": ["id", "inputs"]
        }
      ]
    },
    "referencedSection": {
      "type": "object",
      "properties": {
        "section": { "type": "string" },
        "steps": {
          "type": "array",
          "items": { "$ref": "#/$defs/referencedStep" }
        },
        "metadata": { "type": "object", "additionalProperties": true }
      },
      "required": ["section", "steps"],
      "additionalProperties": false,
      "patternProperties": {
        "^x-": { "$ref": "../defs/common.schema.json#/properties/extensionLaneValue" }
      }
    }
  }
}
