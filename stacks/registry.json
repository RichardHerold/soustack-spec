{
  "$schema": "../schemas/stacks-registry.schema.json",
  "registryVersion": 1,
  "spec": {
    "name": "soustack",
    "currentSpecVersion": "0.3.0",
    "canonicalStacksFormat": "map"
  },
  "profiles": {
    "base": { "title": "Base", "description": "name, ingredients, instructions", "requires": [] },
    "lite": { "title": "Lite", "description": "Minimal publishable recipe", "requires": ["base"] },
    "scalable": { "title": "Scalable", "description": "Quantified + scaling", "requires": ["lite"] },
    "timed": { "title": "Timed", "description": "Structured + timed", "requires": ["lite"] },
    "illustrated": { "title": "Illustrated", "description": "Media present", "requires": ["lite"] }
  },
  "stacks": {
    "quantified": {
      "title": "Quantified",
      "latestMajor": 1,
      "profile": "scalable",
      "requires": [],
      "schema": { "major": { "1": "stacks/quantified.schema.json" } }
    },
    "scaling": {
      "title": "Scaling",
      "latestMajor": 1,
      "profile": "scalable",
      "requires": ["quantified"],
      "schema": { "major": { "1": "stacks/scaling.schema.json" } },
      "docs": { "major": { "1": "stacks/scaling@1.md" } }
    },
    "structured": {
      "title": "Structured",
      "latestMajor": 1,
      "profile": "timed",
      "requires": [],
      "schema": { "major": { "1": "stacks/structured.schema.json" } }
    },
    "timed": {
      "title": "Timed",
      "latestMajor": 1,
      "profile": "timed",
      "requires": ["structured"],
      "schema": { "major": { "1": "stacks/timed.schema.json" } }
    },
    "referenced": {
      "title": "Referenced",
      "latestMajor": 1,
      "profile": "timed",
      "requires": ["structured"],
      "schema": { "major": { "1": "stacks/referenced.schema.json" } }
    },
    "illustrated": {
      "title": "Illustrated",
      "latestMajor": 1,
      "profile": "illustrated",
      "requires": [],
      "schema": { "major": { "1": "stacks/illustrated.schema.json" } }
    },
    "dietary": {
      "title": "Dietary",
      "latestMajor": 1,
      "profile": "lite",
      "requires": [],
      "schema": { "major": { "1": "stacks/dietary.schema.json" } }
    },
    "substitutions": {
      "title": "Substitutions",
      "latestMajor": 1,
      "profile": "lite",
      "requires": ["referenced"],
      "schema": { "major": { "1": "stacks/substitutions.schema.json" } }
    },
    "techniques": {
      "title": "Techniques",
      "latestMajor": 1,
      "profile": "lite",
      "requires": [],
      "schema": { "major": { "1": "stacks/techniques.schema.json" } }
    },
    "storage": {
      "title": "Storage",
      "latestMajor": 1,
      "profile": "lite",
      "requires": [],
      "schema": { "major": { "1": "stacks/storage.schema.json" } }
    },
    "compute": {
      "title": "Compute",
      "latestMajor": 1,
      "profile": "lite",
      "requires": ["quantified", "timed"],
      "schema": { "major": { "1": "stacks/compute.schema.json" } }
    }
  }
}
  